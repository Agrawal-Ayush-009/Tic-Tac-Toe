<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern"
    android:focusable="auto"
    android:focusableInTouchMode="false"
    android:visibility="visible"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="305dp"
        android:layout_height="305dp"
        android:layout_marginTop= "0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:importantForAccessibility="no"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/player1Name"
        app:srcCompat="@drawable/group_6" />

    <ImageView
        android:id="@+id/Ologo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="@id/player1Name"
        app:layout_constraintBottom_toBottomOf="@id/player1Name"
        app:layout_constraintRight_toLeftOf="@id/player1Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/ellipse_1"
        tools:ignore="ImageContrastCheck" />

    <EditText
        android:id="@+id/player1Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="no"
        android:layout_marginRight="30dp"
        android:backgroundTint="#232323"
        android:fontFamily="@font/dm_mono_light_italic"
        android:gravity="center_vertical"
        android:hint="@string/Edit_text_1"
        android:inputType="text"
        android:textColor="#121212"
        android:textColorHint="#b0b0b0"
        android:textCursorDrawable="@null"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/Ologo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf = "@id/player2Name"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <EditText
        android:id="@+id/player2Name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:autofillHints="no"
        android:backgroundTint="#232323"
        android:layout_marginRight="30dp"
        android:fontFamily="@font/dm_mono_light_italic"
        android:gravity="center_vertical"
        android:hint="@string/Edit_text_2"
        android:inputType="text"
        android:textColor="#121212"
        android:textColorHint="#b0b0b0"
        android:textCursorDrawable="@null"
        android:textIsSelectable="false"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/XLogo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf = "@id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/player1Name" />

    <ImageView
        android:id="@+id/XLogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/player2Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/player2Name"
        app:layout_constraintRight_toLeftOf="@id/player2Name"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/player2Name"
        app:srcCompat="@drawable/group_1"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/playButton"
        android:onClick="playButton"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:backgroundTint="#232323"
        android:elegantTextHeight="false"
        android:elevation="20dp"
        android:focusable="auto"
        android:fontFamily="@font/dm_mono_medium"
        android:hapticFeedbackEnabled="true"
        android:text="@string/Button_text"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="#ECECEC"
        android:textColorLink="#ECECEC"
        android:textSize="30sp"
        app:cornerRadius="25dp"
        app:strokeColor="#1B1B1B"
        app:layout_constraintBottom_toTopOf = "@id/frameLayout"
        app:layout_constraintTop_toBottomOf="@id/player2Name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:strokeWidth="5dp" />
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_background"
        android:backgroundTint="#DDDDDD"
        android:elevation="4dp"
        app:barrierMargin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/playButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/dm_mono"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/bottom_text"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="15dp"
            android:importantForAccessibility="no"
            app:srcCompat="@drawable/ellipse_1"
            tools:ignore="ImageContrastCheck" />
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>