<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorOfStatusBar</item>
    </style>

    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.App.Fullscreen" parent="Theme.App">
        <item name="android:actionBarStyle">@style/Widget.Theme.App.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.TicTacToe.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>